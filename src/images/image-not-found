async function fetchMovieCredits(movieId) {
  const response = await fetch(
    `https://api.themoviedb.org/3/movie/${movieId}/credits?api_key=${MY_API_KEY}`
  );
  const credits = await response.json();

  // Replace missing actor portraits with a placeholder image
  const placeholderPath = '..images/portrait-not-found.png';
  credits.cast.forEach(actor => {
    if (!actor.profile_path) {
      actor.profile_path = placeholderPath;
    }
  });

  return credits;
}
